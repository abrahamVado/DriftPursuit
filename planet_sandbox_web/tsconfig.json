{
  "compilerOptions": {
    "types": ["node", "three"],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@web/*": ["src/*"],
      "@client/*": [
        "../typescript-client/src/*",
        "./typescript-client/src/*"
      ],
      "three": ["types/three/index.d.ts"]
    },
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "allowJs": true,
    "incremental": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "app",
    "env.d.ts",
    "src",
    ".next/types/**/*.ts",
    "../typescript-client/src/**/*.ts",   // local monorepo layout
    "typescript-client/src/**/*.ts"       // Docker: lib copied inside /app
  ],
  "exclude": [
    "node_modules"
  ]
}
